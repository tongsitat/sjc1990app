AWS_PROFILE=default

# DynamoDB Table Names (local development)
TABLE_USERS=sjc1990app-users-dev
TABLE_VERIFICATION_CODES=sjc1990app-verification-codes-dev
TABLE_PENDING_APPROVALS=sjc1990app-pending-approvals-dev
