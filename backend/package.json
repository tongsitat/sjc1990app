{
  "name": "sjc1990app-backend",
  "version": "1.0.0",
  "description": "Serverless backend for High School Classmates Connection Platform",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:dev": "cd ../infrastructure && serverless deploy --stage dev",
    "deploy:staging": "cd ../infrastructure && serverless deploy --stage staging",
    "deploy:prod": "cd ../infrastructure && serverless deploy --stage prod",
    "offline": "cd ../infrastructure && serverless offline"
  },
  "keywords": ["serverless", "aws", "lambda", "dynamodb"],
  "author": "sjc1990app",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@middy/core": "^4.6.0",
    "@middy/http-cors": "^4.6.0",
    "@middy/http-error-handler": "^4.6.0",
    "@middy/http-json-body-parser": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
